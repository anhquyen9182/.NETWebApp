@model Assignment2NET.Models.ViewModels.AdsViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Advertisement</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                File Name
            </th>
            <th>
                Image
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model.Advertisements) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.FileName)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.AdvertisementId">Upload</a> |
                <a asp-action="Delete" asp-route-id="@item.AdvertisementId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
